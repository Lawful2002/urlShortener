<form method="post" class="needs-validation" novalidate>
    <div class="form row gx-5 gy-4 mb-3 align-items-center">
        <div class="col-md-6">
            <label for="link" class="form-label">Link</label>
            <input type="url" name="url" id="link" class="form-control" autocomplete="off" placeholder="https://example.com" required autofocus>        
            <div class="form-text">Enter the link</div>                      
        </div>    

        <div class="col-md-4">
            <label class="form-label" for="username">Username</label>
            <div class="input-group">
                <div class="input-group-text">@</div>
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>                
            </div>
            <div class="form-text">Enter a Username</div>
        </div>  

        <div class="col-md-1 text-center">
            <button class="btn btn-success mt-1">Go!</button>
        </div>    

    </div>
    
    
     
</form>
